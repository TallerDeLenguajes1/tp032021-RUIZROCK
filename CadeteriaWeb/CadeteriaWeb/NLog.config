<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<target name="logerrorfile" xsi:type="File" fileName="ErrorLog.txt" />
		<target name="loginfofile" xsi:type="File" fileName="InfoLog.txt" />
		<target name="logconsole" xsi:type="Console" />
	</targets>

	<rules>
		<logger name="*" minlevel="Info" maxlevel="Debug" writeTo="loginfofile" />
		<logger name="*" minlevel="Debug" writeTo="logerrorfile" />
	</rules>
</nlog>
@{
    ViewData["Title"] = "Iniciar sesion";
}
@model CadeteriaWeb.Models.ViewModels.UsuarioLoginViewModel;

<article class="">
    <article>
        <h3 class="">Iniciar sesion</h3>

        <form asp-action="LoginPost" method="post">
            <div class="">
                <label asp-for="Username" class=""></label>
                <input asp-for="Username" type="text" class="">
                <span asp-validation-for="Username" class=""></span>
            </div>

            <div class="">
                <label asp-for="Password" class=""></label>
                <input asp-for="Password" type="password" class="">
                <span asp-validation-for="Password" class=""></span>
            </div>

            <button class="" type="submit">Enviar</button>

            <hr class="">

            <div>
                <p class="">Aún no te registraste? <a asp-action="Registrate" class="">Hazlo ahora!</a></p>
            </div>

            @if (Model.Message != null && Model.Message != "")
            {
                <hr class="">

                <div class="">
                    <strong>Error!</strong> @Model.Message
                </div>
            }

        </form>
    </article>
</article>